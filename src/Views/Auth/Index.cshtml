@model ToolsWebsite.Models.AuthModel
@{
    ViewData["Title"] = "OAuth Access Token Generator";
    ViewData["Description"] = "Free OAuth access token generator for Azure AD by Udaiappa Ramachandran. Generate Azure AD access tokens using client credentials flow for API testing. Secure and no data storage.";
}

<style>
/* JWT.ms inspired color scheme */
/* Encoded token parts - full background colors */
.encoded-header { background-color: #fb015b; color: #fff; padding: 2px 4px; display: inline; word-break: break-all; }
.encoded-payload { background-color: #d63aff; color: #fff; padding: 2px 4px; display: inline; word-break: break-all; }
.encoded-signature { background-color: #00d084; color: #fff; padding: 2px 4px; display: inline; word-break: break-all; }
.encoded-dot { color: #333; font-weight: bold; }
    
/* Token input area - can show plain or colored */
.token-input-box { 
    background: #f8f9fa; 
    padding: 1rem; 
    border-radius: 8px; 
    font-family: monospace; 
    font-size: 0.8rem; 
    line-height: 1.6; 
    word-break: break-all; 
    border: 1px solid #dee2e6; 
    min-height: 120px;
    cursor: text;
}
.token-input-box:focus-within { border-color: #86b7fe; box-shadow: 0 0 0 0.25rem rgba(13, 110, 253, 0.25); }
.token-input-box.empty { color: #6c757d; }
    
/* Decoded JSON - syntax highlighting on white/light background */
.decoded-section { background: #fff; border: 1px solid #dee2e6; border-radius: 8px; padding: 1rem; margin-bottom: 1rem; }
.decoded-section pre { background: transparent; margin: 0; white-space: pre-wrap; word-break: break-all; font-size: 0.85rem; }
.decoded-section-header { border-left: 4px solid #fb015b; }
.decoded-section-payload { border-left: 4px solid #d63aff; }
.decoded-section-signature { border-left: 4px solid #00d084; }
    
/* Header section - red/pink syntax highlighting */
.decoded-section-header .jwt-key { color: #fb015b; font-weight: 500; }
.decoded-section-header .jwt-string { color: #d6336c; }
.decoded-section-header .jwt-number { color: #c92a5a; }
.decoded-section-header .jwt-bool { color: #a61e4d; }
.decoded-section-header .jwt-null { color: #862e9c; font-style: italic; }
    
/* Payload section - purple syntax highlighting */
.decoded-section-payload .jwt-key { color: #d63aff; font-weight: 500; }
.decoded-section-payload .jwt-string { color: #7c3aed; }
.decoded-section-payload .jwt-number { color: #9333ea; }
.decoded-section-payload .jwt-bool { color: #a855f7; }
.decoded-section-payload .jwt-null { color: #c084fc; font-style: italic; }
    
/* Signature section - green syntax highlighting */
.decoded-section-signature .jwt-key { color: #00d084; font-weight: 500; }
.decoded-section-signature .jwt-string { color: #059669; }
.decoded-section-signature .jwt-number { color: #10b981; }
.decoded-section-signature .jwt-bool { color: #34d399; }
.decoded-section-signature .jwt-null { color: #6ee7b7; font-style: italic; }
    
/* Section labels */
.section-label { font-size: 0.75rem; font-weight: 600; text-transform: uppercase; letter-spacing: 0.5px; margin-bottom: 0.5rem; }
.section-label-header { color: #fb015b; }
.section-label-payload { color: #d63aff; }
.section-label-signature { color: #00d084; }
    
/* Tab styling */
.jwt-tabs .nav-link { color: #495057; border: none; padding: 0.75rem 1.5rem; font-weight: 500; }
.jwt-tabs .nav-link.active { color: #0d6efd; background: transparent; border-bottom: 3px solid #0d6efd; }
.jwt-tabs .nav-link:hover:not(.active) { color: #0d6efd; background: #f8f9fa; }
    
/* Claims table */
.claims-table { font-size: 0.9rem; }
.claims-table th { background: #f8f9fa; font-weight: 600; width: 30%; }
.claims-table td { word-break: break-all; }
.claim-name { color: #d63384; font-family: monospace; }
    .claim-value { color: #0d6efd; }
    
    /* Hidden textarea for clipboard operations */
    .hidden-textarea { position: absolute; left: -9999px; }
</style>

